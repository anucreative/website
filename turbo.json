{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.local",
    "**/.env.*.local",
    "**/tsconfig.json"
  ],
  "globalEnv": ["NODE_ENV", "VITE_API_URL"],
  "tasks": {
    "build": {
      "description": "Build all packages and apps",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "dev": {
      "description": "Start development server",
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "test": {
      "description": "Run tests",
      "outputs": ["coverage/**"],
      "cache": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "description": "Lint code",
      "outputs": [".eslintcache"],
      "cache": true,
      "dependsOn": []
    },
    "type-check": {
      "description": "TypeScript type checking",
      "cache": true,
      "dependsOn": []
    },
    "storybook": {
      "description": "Start Storybook",
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "generate": {
      "description": "Generate types and code",
      "outputs": ["src/generated/**"],
      "cache": true,
      "dependsOn": []
    }
  },
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": true
    },
    "type-check": {
      "cache": true
    },
    "generate": {
      "outputs": ["src/generated/**"],
      "cache": true
    }
  }
}
