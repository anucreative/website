{
  "name": "anucreative-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for anucreative website with React, Vue, and backend services",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:filter": "turbo run dev --filter",
    "build": "turbo run build",
    "build:filter": "turbo run build --filter",
    "start": "cd apps/react && yarn start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,vue,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "install-deps": "yarn install",
    "precommit": "yarn lint && yarn type-check"
  },
  "engines": {
    "node": ">=24.0.0",
    "yarn": "4.9.4"
  },
  "dependencies": {
    "es-toolkit": "^1.42.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "msw": "^2.12.3",
    "prettier": "^3.7.3",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "packageManager": "yarn@4.12.0"
}
